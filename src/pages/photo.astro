---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
import type { Post } from "../lib/types";
import PhotoArguments from "../components/PhotoArguments.astro";
const background = [
  "IMG_9852.jpg",
  "IMG_9868.jpg",
  "IMG_2064.jpg",
  "IMG_3978.jpg",
  "IMG_8003.jpg",
];

var img = Math.floor(Math.random() * (background.length - 0) + 0);

const posts = Object.values(
  import.meta.glob("./posts/computer_science/*.md", { eager: true })
) as unknown as Post[];
---

<Layout>
  <div class="min-h-screen bg-neutral-950">
    <div
      style={`background-image: url(/images/photo_page/${background[img]})`}
      class="relative h-screen bg-cover bg-center bg-fixed"
    >
      <div
        class="absolute inset-0 bg-linear-to-b from-black/60 via-black/40 to-black/80"
      >
      </div>

      <div
        class="relative z-10 h-full flex flex-col items-center justify-center px-6 text-center"
      >
        <h1
          class="text-4xl sm:text-5xl md:text-7xl font-bold text-white tracking-tight mb-6 animate-fade-in"
        >
          La mia fotografia
        </h1>
        <p
          class="text-base sm:text-lg md:text-xl text-neutral-200 max-w-2xl mb-8 leading-relaxed"
        >
        </p>
      </div>

      <div
        class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce"
      >
        <svg
          class="w-6 h-6 text-white/70"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-20 lg:py-24">
      <div class="text-center mb-12 sm:mb-16">
        <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-white mb-4">
          Un'immagine, mille storie
        </h2>
        <div
          class="w-20 h-1 bg-linear-to-r from-transparent via-white to-transparent mx-auto"
        >
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">
        <PhotoArguments
          title="Spazio"
          desc="Mi ha sempre appassionato tantissimo lo spazio. L'immenso... l'infinito... tutto in un portale così piccolo ed insignificante come il nostro cielo. Non ho obbiettivi bestiali, mi accontento di scattare con un 500x Fisso della Tokina abbastanza vecchio e con un 24mm 2.8f Pancake. Ora come ora, mi bastano per lanciare uno sguardo verso stelle e pianeti a distanze inimmaginabili. Quando era in perigeo ed in opposizione sono anche riuscito a fotografare saturno ed i suoi anelli... male, ma si capiva fosse saturno!"
          path="/images/photo_page/spazio/IMG_0725.jpg"
        />
        <PhotoArguments
          title="Paesaggi"
          desc="Abbastanza banale direi. Ma fotografare certi momenti per me è una cosa che va oltre il 'catturare delle belle scene'. Per me è un modo per lasciare impressi momenti che con il tempo uno finisce per lasciare accantonati in spazi remoti della memoria. Ogni foto di questo tipo che ho fatto nel corso del tempo, porta dietro tanti ricordi, tante sensazioni. A volte mi sembra come riviverli..."
          path="/images/photo_page/IMG_2064.jpg"
        />
        <PhotoArguments
          title="Natura"
          desc="Dalla grandezza dell'universo passiamo alla piccolezza della nostra piccola terra. Anni fa iniziai a perdermi nei boschi quando mi veniva voglia di abbandonare tutte le preoccupazioni e pensieri. Quanto mi è stata accanto la natura solo io e le lo sappiamo. Volevo dedicarle almeno questo piccolo spazio :)"
          path="/images/photo_page/IMG_9868.jpg"
        />
        <PhotoArguments
          title="Motori"
          desc="Nel 2021 quando ereditai la mia prima macchina fotografica entry level semi professionale decisi di iniziare a far qualche foto sulla strada dove andavo a piegare in moto durante i weekend. La gente che già mi conosceva iniziò a chiedermi foto e per passaparola mi sono ritrovato lassù per quasi 3 anni quasi ogni weekend a scattare ai motociclisti."
          path="/images/photo_page/motori/IMG_3481.jpg"
        />
        <PhotoArguments
          title="Urbex"
          desc="Esplorare edifici abbandonati, bloccati nel tempo e cercare di riportare per qualche istante i rumori di luoghi una volta piene di vita ma ormai vuote. Condivido questa passione con un mio amico."
          path="/images/photo_page/urbex/IMG_0793.jpg"
        />
      </div>
    </div>

    <style>
      @keyframes fade-in {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .animate-fade-in {
        animation: fade-in 1s ease-out;
      }

      html {
        scroll-behavior: smooth;
      }
    </style>
  </div>
</Layout>
